@model KPI_Schedule.Models.Group

<h4>Ви впевнені, що хочете видалити?</h4>

<table>
    <tr>
        <th>Department</th>
        <th>Name</th>
        <th>Course</th>
    </tr>
    <tr>
        <td>@Model.Department.ShortName</td>
        <td>@Model.Name</td>
        <td>@Model.Course</td>
    </tr>
</table>
<form asp-action="Delete" asp-route-id="@Model.Id">
    <input type="submit" value="Delete" />
</form>
<a asp-action="List">Go Back</a>