@model KPI_Schedule.Models.Department

<h4>Ви впевнені, що хочете видалити?</h4>

<table>
    <tr>
        <th>Faculty</th>
        <th>Name</th>
        <th>ShortName</th>
    </tr>
    <tr>
        <td>@Model.Faculty.ShortName</td>
