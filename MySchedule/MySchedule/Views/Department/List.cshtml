@model IEnumerable<KPI_Schedule.Models.Department>

<a asp-action="Create" class="link-create">Create new item</a>
<table>
    <tr>
        <th>Faculty</th>
        <th>Name</th>
        <th>ShortName</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Faculty.ShortName</td>
            <td>@item.Name</td>
            <td>@item.ShortName</td>
            <td>
                <a class="td-link" asp-controller="Department" asp-action="Choose" asp-route-id="@item.Id">Choose</a> |
                <a class="td-link" asp-controller="Department" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a class="td-link" asp-controller="Department" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
    }
</table>
