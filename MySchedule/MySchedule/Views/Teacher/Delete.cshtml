@model KPI_Schedule.Models.Teacher

<h4>Ви впевнені, що хочете видалити?</h4>

<table>
    <tr>
        <th>Name</th>
        <th>Surname</th>
        <th>Email</th>
        <th>Phone</th>
    </tr>
    <tr>
        <td>@Model.Name</td>
